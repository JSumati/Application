<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core">
   <Dialog
      id="sign"
      title="Sign Up">
   	<content>
	   	<VBox fitContainer="true" justifyContent="Center" alignItems="Center" alignContent="Center">
						<items>
							<Input id="susername" placeholder="User Name" />
							<Input id="suserpasw" placeholder="Password" type="Password" maxLength='40'/>
							<Button width="12rem" text="Sign Up" type="Emphasized" press="onSignUp" />
						</items>
		</VBox>
	</content>
   </Dialog>
</core:FragmentDefinition>