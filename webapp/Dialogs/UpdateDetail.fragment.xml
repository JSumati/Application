<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core">
   <Dialog
      id="updetail"
      title="Update Detail">
   	<content>
	   	<VBox fitContainer="true" justifyContent="Center" alignItems="Center" alignContent="Center">
						<items>
							<Input id="upaddress" placeholder="Address" />
							<Input id="upcity" placeholder="City" />
							<Input id="uppostal" placeholder="Postal Code" />
							<Input id="upcountry" placeholder="Country" />
							<Input id="upphone" placeholder="Phone Number" />
							<Button width="12rem" text="Submit" type="Emphasized" press="onSubmit" />
						</items>
		</VBox>
	</content>
   </Dialog>
</core:FragmentDefinition>