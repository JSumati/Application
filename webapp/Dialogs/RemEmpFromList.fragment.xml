<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:l="sap.ui.layout"
   xmlns:f="sap.ui.layout.form"
   xmlns:core="sap.ui.core">
   <Dialog
      title="Remove Employee">
   	<content>
   		<f:SimpleForm id="idCreateUserForm" minWidth="1024" 
   					  editable="true" 
   					  layout="ResponsiveGridLayout" 
					  labelSpanL="3" labelSpanM="3"  
					  emptySpanL="4" emptySpanM="4" columnsL="1" 
					  columnsM="1" class="editableForm">
   			<f:content>
				 <Input id="remusername" placeholder="Employee Id" value=""/>
				 <Button width="7rem"   text="Remove" type="Emphasized" press="onRem" />
			</f:content>
		</f:SimpleForm>
	</content>
   </Dialog>
</core:FragmentDefinition>