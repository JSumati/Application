<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core">
   <Dialog
      id="helloDialogUpdate"
      title="Update Password">
   	<content>
	   	<VBox fitContainer="true" justifyContent="Center" alignItems="Center" alignContent="Center">
						<items>
							<Input id="upname" placeholder="User Name" />
							<Input id="uppasw" placeholder="Password" type="Password" maxLength='40'/>
							<Button width="12rem" text="Update" type="Emphasized" press="onUpdate" />
						</items>
		</VBox>
	</content>
   </Dialog>
</core:FragmentDefinition>